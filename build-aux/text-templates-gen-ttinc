target=Makefile.ttinc
ttinc_in=Makefile.ttinc.in
ttinc=Makefile.ttinc

subdirs=`cat .ttincdirs`

echo "
ttinc_genfiles =

EXTRA_DIST += \
	$target \
	.ttincdirs \
	\$(ac_aux_dir)/text-templates-gen \
	\$(ac_aux_dir)/text-templates-gen-ttinc

Makefile.ttinc: .ttincdirs
	\$(gen_makefile_ttinc)
" > "$target"

for dir in $subdirs
do
    echo "
\$(srcdir)/$dir/$ttinc: \$(srcdir)/$dir/$ttinc_in
	\$(gen_makefile_inc) $dir > \$@
include \$(srcdir)/$dir/$ttinc
EXTRA_DIST += \$(srcdir)/$dir/$ttinc_in

noinst_DATA += \$(ttinc_genfiles_list)

# Make sure this is not empty
\$(ttinc_genfiles_list): \$(ttinc_genfiles)
	\$(AM_V_GEN)rm -rf \$(ttinc_genfiles_list) && \
	for i in \$(ttinc_genfiles); do \
	    echo \$\$i >> \$@ ; \
	done

# CLEANFILES += \$(ttinc_genfiles_list)
" >> "$target"
done

for dir in $subdirs
do
    touch "$dir/$ttinc"
done

sleep 1

# In case this is called for the first time.
for dir in $subdirs
do
    touch "$dir/$ttinc_in"
done
